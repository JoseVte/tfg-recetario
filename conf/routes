# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.UserController.index()

# Routes API Rest
## Users
GET     /users                  controllers.UserController.list(page: Integer ?= 1, size: Integer ?= 3)
GET     /users/$id<[0-9]+>      controllers.UserController.get(id: Integer)
POST    /users                  controllers.UserController.create()
PUT     /users                  controllers.UserController.update()
PATCH   /users                  controllers.UserController.update()
DELETE  /users/$id<[0-9]+>      controllers.UserController.delete(id: Integer)

## Recipes
GET     /recipes                  controllers.RecipeController.list(page: Integer ?= 1, size: Integer ?= 3)
GET     /recipes/$id<[0-9]+>      controllers.RecipeController.get(id: Integer)
POST    /recipes                  controllers.RecipeController.create()
PUT     /recipes                  controllers.RecipeController.update()
PATCH   /recipes                  controllers.RecipeController.update()
DELETE  /recipes/$id<[0-9]+>      controllers.RecipeController.delete(id: Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
